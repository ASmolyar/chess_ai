# Dockerfile for Eval Server (Node.js + Stockfish for ELO calculation)
FROM node:20-slim

# Install Stockfish
RUN apt-get update && apt-get install -y \
    stockfish \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy server files
COPY server/package*.json ./
RUN npm install

COPY server/ ./

# Expose ports (HTTP + WebSocket)
EXPOSE 3001 3002

# Run the server
CMD ["node", "index.js"]
